<!DOCTYPE html>
<html lang="pt-BR">
    <%- include('../../partials/head') %>
<body>
    <%- include('../../partials/header') %>

    <main class="container">
        <section class="main-column">
            <article class="post">
                <%- include('../../partials/msg') %>

                <h2 class="title">Informações do Usuário</h2>
                <% if(typeof userDetails == 'object') { %>
                    <a href="/usuarios/cadastrar-dependente/<%= userDetails.id %>" class="btn">Novo Dependente</a>
                    <a href="#listar-dependentes" class="btn">Consultar Dependentes</a>
                <% } %>

                <form action="/">

                    <% if (typeof userDetails == 'object') { %>
                        <fieldset>
                            <legend>Titular</legend>
                            <input type="hidden" value="<%= userDetails.id %>" name="id" disabled>
                            <div class="box">
                                <label for="matricula">Matrícula:</label>
                                <input type="number" id="matricula" name="matricula" value="<%= userDetails.matricula %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="nome">Nome:</label>
                                <input type="text" id="nome" name="nome" value="<%= userDetails.nome %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="identidade">RG:</label>
                                <input type="text" name="identidade" id="identidade" value="<%= userDetails.identidade %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="data-exp">Data de Expedição:</label>
                                <input type="text" id="data-exp" name="data-exp" value="<%= userDetails.data_exp %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="emissor">Órgão Emissor:</label>
                                <input type="text" id="emissor" name="emissor" value="<%= userDetails.orgao_emissor %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="cpf">CPF:</label>
                                <input type="text" id="cpf" name="cpf" value="<%= userDetails.cpf %>" disabled>
                            </div>
    
                            <div class="sexo box">
                                <label for="sexo">Sexo:</label>
                                <input type="text" disabled value="<%= userDetails.sexo %>" id="sexo">
                            </div>
    
                            <div class="box">
                                <label for="estado-civil">Estado Civil:</label>
                                <input type="text" name="estadoCivil" id="estado-civil" value="<%= userDetails.estado_civil %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="data-nasc">Data de Nascimento:</label>
                                <input type="text" id="data-nasc" name="dataNasc" value="<%= userDetails.data_nasc %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="cartao-sus">Cartão SUS:</label>
                                <input type="text" id="cartao-sus" name="cartaoSUS" value="<%= userDetails.cartao_sus %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="endereco">Endereço: </label>
                                <input type="text" id="endereco" name="endereco" value="<%= userDetails.endereco %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="numero">Número:</label>
                                <input type="number" id="numero" name="numeroEnd" value="<%= userDetails.numero_endereco %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="bairro">Bairro:</label>
                                <input type="text" id="bairro" name="bairro" value="<%= userDetails.bairro %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="cidade">Cidade:</label>
                                <input type="text" id="cidade" name="cidade" value="<%= userDetails.cidade %>" disabled>
                            </div>
                            
                            <div class="box">
                                <label for="nome-mae">Nome da mãe:</label>
                                <input type="text" id="nome-mae" name="nomeMae" value="<%= userDetails.nome_mae %>" disabled>
                            </div>
    
                            <div class="box">
                                <label for="nome-pai">Nome do pai:</label>
                                <input type="text" id="nome-pai" name="nomePai" value="<%= userDetails.nome_pai %>" disabled>
                            </div>

                            <div class="box">
                                <label for="data-cadastro">Data de cadastro:</label>
                                <input type="text" id="data-cadastro" name="data-cadastro" value="<%= userDetails.data_cadastro %>" disabled>
                            </div>
    
                        </fieldset>
                    <% } %>
                </form>

                <% if(typeof dependentes == 'object') { %>
                    <form action="/">
                            <% dependentes.forEach(function(dependente) { %>
                                <fieldset>
                                    <legend>Dependente</legend>
                                    <div class="box">
                                        <label for="nome-dependente">Nome do Dependente:</label>
                                        <input type="text" id="nome-dependente" value="<%= dependente.nome_dependente %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="identidade-dependente">RG:</label>
                                        <input type="text" id="identidade-dependente" value="<%= dependente.identidade %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="data-exp-dependente">Data Exp:</label>
                                        <input type="text" id="data-exp-dependente" value="<%= dependente.data_exp %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="orgao-emissor-dependente">Órgão Emissor:</label>
                                        <input type="text" id="orgao-emissor-dependente" value="<%= dependente.orgao_emissor %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="cpf-dependente">CPF:</label>
                                        <input type="text" id="cpf-dependente" value="<%= dependente.cpf %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="estado-civil-dependente">Estado Civil:</label>
                                        <input type="text" id="estado-civil-dependente" value="<%= dependente.estado_civil %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="data-nasc-dependente">Data Nasc:</label>
                                        <input type="text" id="data-nasc-dependente" value="<%= dependente.data_nasc %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="cartao-sus-dependente">SUS:</label>
                                        <input type="text" id="cartao-sus-dependente" value="<%= dependente.cartao_sus %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="endereco-dependente">Endereço:</label>
                                        <input type="text" id="endereco-dependente" value="<%= dependente.endereco %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="numero-end-dependente">Nº:</label>
                                        <input type="text" id="numero-end-dependente" value="<%= dependente.numero_end %>" disabled>
                                    </div>
                                    
                                    <div class="box">
                                        <label for="cidade-dependente">Cidade:</label>
                                        <input type="text" id="cidade-dependente" value="<%= dependente.cidade %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="ddd-dependente">DDD:</label>
                                        <input type="text" id="ddd-dependente" value="<%= dependente.ddd %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="tel-fixo-dependente">Tel Fixo:</label>
                                        <input type="text" id="tel-fixo-dependente" value="<%= dependente.telefone_fixo %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="tel-celular-dependente">Tel Celular:</label>
                                        <input type="text" id="tel-celular-dependente" value="<%= dependente.telefone_celular %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="tel-celular-dependente">Grau de Parentesco:</label>
                                        <input type="text" id="tel-celular-dependente" value="<%= dependente.grau_parentesco %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="mae-dependente">Nome da mãe:</label>
                                        <input type="text" id="mae-dependente" value="<%= dependente.nome_mae %>" disabled>
                                    </div>

                                    <div class="box">
                                        <label for="data-cadastro-dependente">Data de cadastro:</label>
                                        <input type="text" id="data-cadastro-dependente" value="<%= dependente.data_cadastro %>" disabled>
                                    </div>
                                </fieldset>
                            <% }); %>
                    </form>
                <% } %>

            </article>
        </section>

        <%- include('../../partials/sidecolumn') %>
    </main>

        <%- include('../../partials/footer') %>
</body>
</html>