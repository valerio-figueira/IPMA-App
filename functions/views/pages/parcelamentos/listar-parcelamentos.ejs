<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>IPMA - Parcelamentos</title>
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="script/index.js" defer></script>
    </head>
<body>
    <%- include('../../partials/header') %>

    <main class="container">
        <section class="main-column">
            <article class="post">
                <h2 class="title">Parcelamentos</h2>
                <a href="/parcelamentos/cadastrar" class="btn">Novo Parcelamento</a>
                <table class="parcelamentos">
                    <thead>
                        <tr>
                            <th>Matrícula</th>
                            <th>Nome</th>
                            <th>Orçamento</th>
                            <th>Nº Parcelas</th>
                            <th>Parc. Pagas</th>
                            <th>Data Início</th>
                            <th>Clínica</th>
                            <th>Aposentado</th>
                            <th>Valor Parc.</th>
                            <th>Atualizar</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% data.forEach(function(selection){ %>
                            <tr id=<%= selection.id %>>
                                <td><%= selection.matricula %></td>
                                <td class="nome"><%= selection.nome %></td>
                                <td>R$ <%= selection.valor_total %></td>
                                <td><%= selection.qtd_parcelas %>X</td>
                                <td><%= selection.qtd_parcelas_pagas %></td>
                                <td><%= selection.data_inicio %></td>
                                <td><%= selection.clinica %></td>
                                <td><%= selection.aposentado %></td>
                                <td class="valor-parcela">R$ <%= selection.valor_parcela %></td>
                                <td class="td-anchor"><a href="/parcelamentos/atualizar" class="btn fa fa-edit table-anchor"></a></td>
                            </tr>
                        <% }); %>
                        <tr class="total-row">
                            <td colspan="8">Total =</td>
                            <td class="total-price" colspan="1">R$ <%= totalPrice %></td>
                        </tr>
                    </tbody>
                </table>
            </article>
        </section>

        <%- include('../../partials/sidecolumn') %>
    </main>

    <%- include('../../partials/footer') %>
</body>
</html>