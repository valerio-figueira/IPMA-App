<article class="post">
    <h2 class="title">Informações do Usuário</h2>


    <form action="/">
        <fieldset>
            <legend>Titular</legend>
            {{#if usuario}}
                <input type="hidden" disabled name="id" value={{usuario.id}}>
                <div class="box">
                    <label for="matricula">Matrícula:</label>
                    <input type="number" id="matricula" name="matricula" disabled value={{usuario.matricula}}>
                </div>

                <div class="box">
                    <label for="nome">Nome:</label>
                    <input type="text" id="nome" name="nome" disabled value={{usuario.nome}}>
                </div>

                <div class="box">
                    <label for="identidade">RG:</label>
                    <input type="text" name="identidade" id="identidade" disabled value={{usuario.identidade}}>
                </div>

                <div class="box">
                    <label for="data-exp">Data de Expedição:</label>
                    <input type="date" id="data-exp" name="data-exp" disabled value={{usuario.data_exp}}>
                </div>

                <div class="box">
                    <label for="emissor">Órgão Emissor:</label>
                    <input type="text" id="emissor" name="emissor" disabled value={{usuario.orgao_emissor}}>
                </div>

                <div class="box">
                    <label for="cpf">CPF:</label>
                    <input type="text" id="cpf" name="cpf" disabled value={{usuario.cpf}}>
                </div>

                <div class="sexo box">
                    <label for="sexo">Sexo:</label>
                    <input type="text" disabled id="sexo" value={{usuario.sexo}}>
                </div>

                <div class="box">
                    <label for="estado-civil">Estado Civil:</label>
                    <input type="text" name="estadoCivil" id="estado-civil" disabled value={{usuario.estado_civil}}>
                </div>

                <div class="box">
                    <label for="data-nasc">Data de Nascimento:</label>
                    <input type="date" id="data-nasc" name="dataNasc" disabled value={{usuario.data_nasc}}>
                </div>

                <div class="box">
                    <label for="cartao-sus">Cartão SUS:</label>
                    <input type="text" id="cartao-sus" name="cartaoSUS" disabled value={{usuario.cartao_sus}}>
                </div>

                <div class="box">
                    <label for="endereco">Endereço: </label>
                    <input type="text" id="endereco" name="endereco" disabled value={{usuario.endereco}}>
                </div>

                <div class="box">
                    <label for="numero">Nº:</label>
                    <input type="number" id="numero" name="numeroEnd" disabled value={{usuario.numero_endereco}}>
                </div>

                <div class="box">
                    <label for="bairro">Bairro:</label>
                    <input type="text" id="bairro" name="bairro" disabled value={{usuario.bairro}}>
                </div>

                <div class="box">
                    <label for="cidade">Cidade:</label>
                    <input type="text" id="cidade" name="cidade" disabled value={{usuario.cidade}}>
                </div>
                
                <div class="box">
                    <label for="nome-mae">Nome da mãe:</label>
                    <input type="text" id="nome-mae" name="nomeMae" disabled value={{usuario.nome_mae}}>
                </div>

                <div class="box">
                    <label for="nome-pai">Nome do pai:</label>
                    <input type="text" id="nome-pai" name="nomePai" disabled value={{usuario.nome_pai}}>
                </div>

                <div class="box">
                    <label for="data-cadastro">Data de cadastro:</label>
                    <input type="date" id="data-cadastro" name="data-cadastro" disabled value={{usuario.data_cadastro}}>
                </div>
            {{else}}
            <h3>Nenhum encontrado</h3>
            {{/if}}
        </fieldset>
    </form>


</article>
</html>